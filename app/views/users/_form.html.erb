<div class="control-group">
  <%= f.label :name %>
  <div class="controls">
    <%= f.text_field :name %>
  </div>
</div>

<div class="control-group">
  <%= f.label :username %>
  <div class="controls">
    <%= f.text_field :username, autocomplete: 'off' %>
  </div>
</div>

<div class="control-group">
  <%= f.label :password %>
  <div class="controls">
    <%= f.password_field :password, autocomplete: 'off' %>
  </div>
</div>

<div class="control-group">
  <%= f.label :company %>
  <div class="controls">
    <%= f.hidden_field :customer_id, id: 'user_customer_id', class: 'auto_complete_id' %>
    <%= text_field :customer, :name, {:id=>"user_customer_name", :value => @user.customer.try(:name)} %>

    <a href="<%= @user.customer.nil? ? "#" : "/customers/edit/#{@user.customer.id}" %>" id="user_customer_link">
      <i class="icon-share" title=<%= t("users.goto_company") %>></i>
    </a>
  </div>
</div>

<%= render "/common/custom_attributes", object: @user %>

<% if @user.avatar? -%>
  <div class="control-group">
    <label><%= t("users.current_avatar") %></label>
    <div class="controls">
      <%= tag("img", {:src => @user.avatar_url(25), :border => 0 } ) %>
      <%= tag("img", {:src => @user.avatar_url, :border => 0 } ) %>
    </div>
  </div>
<% end -%>

<div class="control-group">
  <%= f.label :avatar %>
  <div class="controls">
    <%= f.file_field :avatar %>
    <br/>
    <span class="optional" style="clear:both;">
      <%= t 'hint.user.avatar' %>
    </span>
  </div>
</div>

<div class="control-group">
  <%= f.label :locale %>
  <div class="controls">
    <%= f.select :locale, I18n.available_locales %>
  </div>
</div>

<div class="control-group">
  <%= f.label :time_zone %>
  <div class="controls">
    <%= f.time_zone_select 'time_zone', TZInfo::Timezone.all.sort, :model => TZInfo::Timezone %>
  </div>
</div>

<div class="control-group">
  <%= f.label :receive_notifications %>
  <div class="controls">
    <%= f.check_box :receive_notifications %>
  </div>
</div>

<div class="control-group">
  <%= f.label :receive_own_notifications %>
  <div class="controls">
    <%= f.check_box :receive_own_notifications %>
  </div>
</div>

<div class="control-group">
  <%= f.label :auto_add_to_customer_tasks,
              t("users.auto_add_to_customer_tasks", customer: f.object.customer.try(:name)) %>
  <div class="controls">
    <%= f.check_box :auto_add_to_customer_tasks %>
  </div>
</div>

<div class="control-group">
  <%= f.label :active %>
  <div class="controls">
    <%= f.check_box :active %>
  </div>
</div>

<div class="control-group">
  <%= f.label :time_format %>
  <div class="controls">
    <%= f.select :time_format, [ ['16:00', '%H:%M'], ['4:00 PM', '%I:%M%p'] ] %>
  </div>
</div>

<div class="control-group">
  <%= f.label :date_format %>
  <div class="controls">
    <%= f.select :date_format, [ ['1/21/2007', '%m/%d/%Y'], ['21/1/2007', '%d/%m/%Y'], ['2007-1-21', '%Y-%m-%d'] ] %>
  </div>
</div>

<div class="control-group">
  <%= f.label :option_tracktime %>
  <div class="controls">
    <%= f.check_box :option_tracktime %>
  </div>
</div>

<div class="control-group">
  <%= f.label :show_avatars %>
  <div class="controls">
    <%= f.check_box :option_avatars %>
  </div>
</div>

