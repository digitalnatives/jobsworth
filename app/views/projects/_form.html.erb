<div class="control-group">
  <label for="project_name"><%=_ 'Name' %></label>
  <div class="controls">
    <%= text_field 'project', 'name', {:autocomplete=>"off"}  %>
  </div>
</div>

<div class="control-group">
  <label for="project_customer_name"><%=_ 'Company' %></label>
  <div class="controls">
    <%= text_field :customer, :name, {
          :id=>"project_customer_name",
          :value => @project.customer.nil? ? "" :@project.customer.name,
          :autocomplete => "off",
          :rel => "tooltip",
          :title => "Please enter the client name by the autocomplete."
        }
    %>
    <a href="<%= @project.customer.nil? ? "#" : "/customers/edit/#{@project.customer.id}" %>" id="project_customer_link"><i class="icon-share" title="Go to this company"></i></a>

  </div>
</div>

<div class="control-group">
  <label for="project_default_estimate"><%= _ 'Default Estimate' %></label>
  <div class="controls">
    <%= text_field 'project', 'default_estimate', :title => "duration estimate for a task in this project(unit: hour)", :rel => "tooltip" %>
  </div>
</div>

<% if @project.billing_enabled? %>
<div class="control-group">
  <label for="project_suppress_billing"><%= _ 'Suppress Billing' %></label>
  <div class="controls">
    <label class="checkbox">
      <%= check_box 'project', 'suppressBilling' %>
      Don't bill time for this project
    </label>
  </div>
</div>
<% end %>

<% if @project.template? || (!@project.template? && @project.new_record?) %>
<script type="text/javascript">jQuery("#project_start_at").datepicker({dateFormat: '<%= current_user.dateFormat %>'});</script>
<div class="control-group">
  <label for="project_start_at"><%=_ 'Start' %></label>
  <div class="controls">
    <%= text_field 'project',
                   'start_at',
                   :title => start_at_title_helper,
                   :class => :datefield,
                   :rel => :tooltip,
                   :value => (@project.start_at.nil? ? "" : @project.start_at.strftime("#{current_user.date_format}"))  %>
  </div>
</div>
<% end %>

<input type = "hidden" id = "project_customer_id" name = "project[customer_id]" value="<%=@project.customer.nil? ? 0 :@project.customer.id -%>">

<div class="control-group">
  <label for="project_name"><%=_ 'Description' %></label>
  <div class="controls">
    <%= text_area 'project', 'description', :rows => 5, :class => "input-xxlarge"  %>
  </div>
</div>

